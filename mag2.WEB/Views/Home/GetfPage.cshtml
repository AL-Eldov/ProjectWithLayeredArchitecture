<form asp-action="GetZeroPercentPage" asp-controller="home">
    <p>
        <label>Показать вещественную картинку </label>
        @Html.CheckBox("switcher", @ViewData["Switcher"])
    </p>
    <p>
        <input type="submit" value="Подтвердить" />
    </p>
</form>

<form asp-action="DoImaginaryZero" asp-controller="home">
    <p>
        <input type="submit" value="Занулить мнимую часть" />
    </p>
</form>



<style>
    table {
        width: 18%; /* Ширина таблицы */
        border-spacing: 2px; /* Расстояние между ячейками */
        margin: auto; /* Выравниваем таблицу по центру окна  */
    }

    td {
        text-align: center; /* Выравниваем текст по центру ячейки */
    }
</style>

<table class="table">
    <tr><th></th><th></th><th></th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id)</td>
            <td>@item.RealPart</td>
            <td>+ i *</td>
            <td>@item.ImaginaryPart</td>
            <td>
                <a asp-action="EditfPage" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
        </tr>
    }
</table>


